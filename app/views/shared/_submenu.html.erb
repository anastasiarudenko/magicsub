<div class="submenu" style="margin:70px 0px 0px 0px">
  <h2>Категории</h2>
  <ul class="subnav nav-pills nav-stacked">
    <% Category.roots.each do |category| %>
      <li class="nav-item">
        <%= link_to category.name, category, class: "nav-link #{'active' if current_page?(category_path(category)) || @post.present? && @post.category == category}",  style: "color: #797979" %>
        <%= render 'shared/submenu_categories', categories: category.root.descendants.arrange%>
      </li>
    <% end %>
  </ul>
</div>