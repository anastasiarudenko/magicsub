<%= form_for @shift, html: { multipart: true } do |f| %>

  <div class="form-group">
    <%= f.file_field :file %>
  </div>

  <div class="form-group">
    <%= f.label :time %>
    <%= f.text_field :time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit ('Загрузить'), class: 'btn btn-primary' %>

    <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>